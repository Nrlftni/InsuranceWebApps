@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html>
<body>

    <style>
        .form-container {
            position: relative;
            top: 170px;
            left: 50%;
            transform: translateX(-50%);
            width: 300px;
        }

        .logo-container {
            position: absolute;
            top: -50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px;
            height: 100px;
        }

        .logo {
            width: 100%;
            height: auto;
        }
    </style>

    <div class="form-container">
        <div class="logo-container">
            <img class="logo" src="circlelogo.png" alt="Logo">
        </div>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Username :</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div><br>
            <div class="form-group">
                <label for="password">Password :</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-check form-group">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember me</label>
                <a href="/Account/ForgotPassword" class="btn btn-link">Forgot password?</a>
            </div><br>
            <center>
                <button type="submit" value="Submit" class="btn btn-primary">Submit</button><br><br>
                <div class="text-center">
                    <button type="button" class="btn btn-danger" onclick="signInWithGoogle()">Sign in with Google</button><br><br>
                    <button type="button" class="btn btn-primary" onclick="signInWithFacebook()">Sign in with Facebook</button>
                </div>
            </center>
        </form>
    </div>

    <script>
        function signInWithGoogle() {
            // Implement sign-in with Google functionality here
        }

        function signInWithFacebook() {
            // Implement sign-in with Facebook functionality here
        }
    </script>

</body>
</html>
