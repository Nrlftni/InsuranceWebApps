		const tabs = document.querySelectorAll('#tabs .tab-button');
		const panels = document.querySelectorAll('.panel');
		const subtabs = document.querySelectorAll('#car-panel .subtab-button');
		const subpanels = document.querySelectorAll('.subpanel');

		tabs.forEach((tab, index) => {
			tab.addEventListener('click', () => {
				panels.forEach(panel => panel.style.display = 'none');
				panels[index].style.display = 'block';
			});
		});

		subtabs.forEach((subtab, index) => {
			subtab.addEventListener('click', () => {
				subpanels.forEach(subpanel => subpanel.style.display = 'none');
				subpanels[index].style.display = 'block';
			});
		});

